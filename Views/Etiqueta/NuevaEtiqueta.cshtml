@model Etiqueta
@{
    ViewData["Title"] = "NuevaEtiqueta";
}

<body>
    <div id="fondo" class="align-items-center">
        <div id="titulo3" class="container-lg col-4 align-items-center">
            <label id="CrearEtiqueta">Agregá una etiqueta nueva:</label>
            <div>

                <div class="align-items-center">
                    <form method="post" action="CrearEtiqueta">
                        <p id="textoLight2">Elegí un nombre bajo el que puedas clasificar varios gastos y si querés, podés agregar una breve descripción para más detalle</p>
                        <div class="form-group align-items-center">
                            <input asp-for="Nombre" class="form-control" id="Nombre" type="text" name="Nombre" value="" placeholder="Nombre" />

                        </div>
                        <div class="form-group align-items-center">
                            <textarea asp-for="Descripcion" class="form-control" id="Descripcion" type="text" name="Descripcion" value="" placeholder="Descripcion"></textarea>
                        </div>
                        <button asp-action="CrearEtiqueta" asp-controller="Etiqueta" id="botonR" type="submit" class="btn">Guardar</button>
                        <a asp-action="Perfil" asp-controller="Perfil" type="submit" class="btn btn-outline-light text-light">Volver al perfil</a>
                    </form>
                </div>

            </div>
        </div>
    </div>
</body>